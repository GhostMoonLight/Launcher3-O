            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="下载"/>

        <TextView
            android:id="@+id/pro_tv"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0%"/>
    </LinearLayout>

    <LinearLayout
